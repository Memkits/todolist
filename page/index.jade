
doctype html
html
  head
    title Todo List
    meta(charset='utf-8')
    link(rel='stylesheet', href='page/style.css')
    script(defer, src='./build/build.js')
  body#app
    #menu(class='mode-{{mode}}')
      #futures
        .cover(v-on='click: switchFutures', v-show='isFutures | oppsite')
          .text
            span Currently you have
            span.count {{futuresLength}}
            span tasks
        .list(v-show='isFutures')
          .task(v-repeat='futures')
            .title {{title}}
      #working
        .cover(v-on='click: switchWorking', v-show='isWorking | oppsite')
          .text
            span Currently you have
            span.count {{workingLength}}
            span tasks
          .button#add(v-on='click: createTask')
            | +
        .list(v-show='isWorking')
          .task(v-repeat='working')
            .title {{title}}
      #history
        .cover(v-on='click: switchHistory', v-show='isHistory | oppsite')
          .text
            span history length
            span.count {{historyLength}}
        .list(v-show='isHistory')
          .record(v-repeat='history')
            .action {{action}}
            .title {{title}}
            .time {{finish}}
    #editor(v-show='editing')
      #dialog(class='action-{{action}}')
        #action
          span {{action}}
          span#dismiss(v-on='click: dismiss') âœ—
        #inputing
          input#title
          input#content
        #add-control.controls(v-show='isEditing | oppsite')
          #create-task.button(v-on='click: createTask')
            | create
        #edit-control.controls(v-show='isEditing')
          #update-task.button(v-on='click: updateTask')
            | update
          #remove-task.button(v-on='click: removeTask')
            | remove
